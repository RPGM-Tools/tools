{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"compilerOptions": {
		"paths": {
			"$rpgm/*": [
				"./tools/*/src"
			],
			"#/*": [
				"./shared/src/*"
			],
		},
		"lib": [
			"ES2021",
			"DOM",
			"DOM.Iterable"
		],
		"types": [
			"vue"
		],
		"module": "esnext",
		"target": "esnext",
		"moduleResolution": "bundler",
		"declaration": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"esModuleInterop": true,
		"noImplicitOverride": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"./tools/**/*.ts",
		"./shared/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
